<%= form_with model: notebook do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% notebook.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit class: "action-button primary" %>
  </div>
<% end %>
