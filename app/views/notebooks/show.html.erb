<h1><%= @notebook.title %></h1>
<%= link_to "Edit Title", edit_notebook_path(@notebook), class: "action-button primary" %>
  <%= link_to "Delete Notebook", notebook_path(@notebook), class: "action-button",
    method: :delete,
    data: { confirm: "Are you sure?" } %>
<br>
<div class="pages-container">
  <div class="form-container">
    <%= render 'pages/form' %>
  </div>

  <% @notebook.pages.select { |page| page.title && page.body }.reverse.each do |page| %>
    <%= render :partial => 'pages/page', :object => page %>
  <% end %>
</div>
<br>
<%= link_to "Back to Notebooks", notebooks_path, class: "action-button" %>